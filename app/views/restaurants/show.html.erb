<!DOCTYPE>
<html>

<head>
</head>

<body>
    <h2><%= @restaurant.name %></h2>
    <h4><%= @restaurant.description %></h4>
    <p></p>

        <% if flash[:error] -%>
     <%= flash[:error] %>
    <% end -%>

    <%= form_for([@restaurant, @review]) do |f| %>
      <%= f.hidden_field :restaurant_id %>
      <%= f.label :review, 'Review:' %>
      <div id="comment">
      <%= f.text_area :comment, placeholder: 'Add your review here' , size: "40x8" %>
    </div>
     <p></p>

     <%= f.label :rating, 'Rating:' %><br>
     <%= f.radio_button(:rating, 1) %> Inedible
     <%= f.radio_button(:rating, 2) %> Poor
     <%= f.radio_button(:rating, 3) %> Average
     <%= f.radio_button(:rating, 4) %> Good
     <%= f.radio_button(:rating, 5) %> Delicious
     <p></p>
     <%= f.submit "Save your Review"%>

    <% end %>

    <% @restaurant.reviews.each do |review| %>
      <p> Review:
      	<%= review.comment %></br>
      	Rating:
      	<%= review.text_rating %>
      </p>
    <% end %>



  </body>

</html>